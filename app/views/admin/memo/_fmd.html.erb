<div class="col-md-12">
  <div class="page-header">
    <h3>Fleet Maintenance Management Division</h3>
  </div>
  <%= render 'message' %>
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @memo, url: { controller: 'memo', action: 'create' }, html: { method: :post, class: 'form-horizontal' } do |f| %>
      <div class="panel panel-default">
        <div class="panel-body">
          
          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Flight ops monitoring update as of</label>
            </div>
            <div class="col-md-4">
              <div class="input-group">
                <%= f.text_field :flight_monitoring, class: 'form-control has-datetime-picker', required: true %>
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Aircraft on Ground</label>
            </div>
            <div class="col-md-4">
              <%= f.text_field :aircraft_on_ground, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Status</label>
            </div>
            <div class="col-md-4">
              <%= f.text_field :status, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Aircraft Power Unit Inoperative</label>
            </div>
            <div class="col-md-4">
              <%= f.text_field :aircraft_inoperative, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Seat Blocks</label>
            </div>
            <div class="col-md-4">
              <%= f.text_field :seat_block, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">No Avi</label>
            </div>
            <div class="col-md-4">
              <%= f.text_field :no_avi, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Restriction</label>
            </div>
            <div class="col-md-4">
              <%= f.text_area :restriction, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Airconditioning Problem</label>
            </div>
            <div class="col-md-4">
              <%= f.text_field :airconditioning, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Remarks</label>
            </div>
            <div class="col-md-4">
              <%= f.text_area :remarks, class: 'form-control', required: true %>
            </div>
          </div>

        </div>
        <div class="panel-footer text-right">
          <%= f.button 'Submit', class: 'btn btn-primary', type: 'button', id: 'btn-memo-submit' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
