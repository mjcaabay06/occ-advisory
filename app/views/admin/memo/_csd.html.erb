<div class="col-md-12">
  <div class="page-header">
    <h3>Cabin Crew Scheduling Department</h3>
  </div>
  <%= render 'message' %>
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @memo, url: { controller: 'memo', action: 'create' }, html: { method: :post, class: 'form-horizontal' } do |f| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Availablity of Cabin Crews</label>
            </div>
            <div class="col-md-4">
              <%= f.text_field :cabin_crew_availablity, class: 'form-control', required: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-6 text-right">
              <label class="form-label">Remarks</label>
            </div>
            <div class="col-md-4">
              <%= f.text_area :remarks, class: 'form-control', required: true %>
            </div>
          </div>

        </div>
        <div class="panel-footer text-right">
          <%= f.button 'Submit', class: 'btn btn-primary', type: 'button', id: 'btn-memo-submit' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
